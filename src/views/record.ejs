    <img class="card-img-top" src="/uploads/<%- usuario.image -%>" alt="Card image cap" style="width: 200px; height: 200px; border-radius:80%;">
    <div class="card-body">
      <h1><%- usuario.name -%></h1>
      <h4><%- usuario.number -%></h4>
      <a href="/historial/nuevo-resultado/<%- usuario.id -%>" class="btn btn-primary">AÃ±adir nuevo resultado</a>
    </div>
  </div>
  <div class="row">
  <% results.forEach(function(resultado) {%>
    <div class="card2 col-lg-3 col-md-5 col-sm-7 col-9">
      <div class="card-body">
        <h2 class="card-subtitle"><%- resultado.title -%></h2>
        <h3 class="card-subtitle"><%- resultado.date -%></h3>
